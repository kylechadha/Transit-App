<h1>Select your preferences!</h1>

<%= form_for @journey, role: "form", html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :alert_distance, class: "col-sm-2 control-label" %>
    <div class="col-sm-10 select-style">
      <%= f.select :alert_distance, ["500 meters", "1000 meters", "1500 meters"], html_option = { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :alert_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10 select-style">
      <%= f.select :alert_type, ["Alarm", "Notification", "Alarm & Notification"], html_option = { class: "form-control" } %>
    </div>
  </div>
  
  <div><%= f.submit "Save" %></div>

<% end %>